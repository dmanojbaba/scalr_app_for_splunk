<setup>
  <block title="Configure Scalr API Authentication" endpoint="scalr_setup/api_input" entity="api">
    <text>Login to Scalr Server as the user you would like to access the API as, and access the URL https://your-scalr-host/#/core/api2 to GENERATE NEW API KEY</text>
    <input field="url">
      <label>Scalr Server URL (for example, https://my.scalr.com)</label>
      <type>text</type>
    </input>
    <input field="verify_ssl">
      <label>Verify SSL</label>
      <type>bool</type>
    </input>
    <input field="key">
      <label>API Key ID</label>
      <type>text</type>
    </input>
    <input field="password" endpoint="storage/passwords" entity="api%3Asecret%3A">
      <label>API Secret</label>
      <type>text</type>
    </input>
  </block>
</setup>
